# Open WebUI Configuration

# ===== Connection =====
OLLAMA_BASE_URL=http://ollama:11434
# For multiple Ollama instances (load balancing):
# OLLAMA_BASE_URLS=http://ollama1:11434,http://ollama2:11434

# ===== Branding =====
WEBUI_NAME=AI Assistant
WEBUI_FAVICON_URL=/static/favicon.png

# ===== Security =====
WEBUI_AUTH=true
WEBUI_SECRET_KEY=change-this-to-random-secret-key
ENABLE_SIGNUP=false
DEFAULT_USER_ROLE=user
ENABLE_API_KEY=true

# ===== Models =====
DEFAULT_MODELS=llama2,mistral
ENABLE_MODEL_FILTER=false
# If enabled, only show these models:
MODEL_FILTER_LIST=llama2;mistral;codellama

# ===== Features =====
# RAG (Document Chat)
ENABLE_RAG=true
RAG_EMBEDDING_MODEL=llama2
RAG_CHUNK_SIZE=1500
RAG_CHUNK_OVERLAP=100

# Web Search (requires external service)
ENABLE_WEB_SEARCH=false
WEB_SEARCH_ENGINE=searxng
SEARXNG_URL=http://searxng:8080

# Image Generation (requires external service)
ENABLE_IMAGE_GENERATION=false

# Admin Features
ENABLE_ADMIN_EXPORT=true
ENABLE_ADMIN_CHAT_ACCESS=false

# Community
ENABLE_COMMUNITY_SHARING=false

# Function Calling
ENABLE_FUNCTION_CALLING=true

# ===== Performance =====
REQUEST_TIMEOUT=120
CHUNK_SIZE=8192
NUM_PARALLEL_REQUESTS=1
MAX_CONTEXT_LENGTH=4096
CONVERSATION_HISTORY_SIZE=20

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# ===== Storage =====
DATA_DIR=/app/backend/data
MAX_UPLOAD_SIZE=100  # MB

# Database (optional, defaults to SQLite)
# DATABASE_URL=postgresql://user:password@postgres:5432/openwebui

# ===== Logging =====
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# ===== Advanced =====
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# OAuth (optional)
# OAUTH_PROVIDERS=google,github
# GOOGLE_CLIENT_ID=your-client-id
# GOOGLE_CLIENT_SECRET=your-client-secret

# SMTP for email (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com